@model RegistrationRequistDto

<form method="post">

    <div class="container border p-4">
        <div class=" row text-center">
            <h1>Register</h1>
        </div>

        <div class=" row text-center p-3">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="col-12 col-md-6 offset-3 pb-3">

            <input asp-for="Name" class="form-control" placeholder="Name" />
        </div>

        <div class="col-12 col-md-6 offset-3 pb-3">

            <input asp-for="Email" class="form-control" placeholder="Email" />
        </div>

        <div class="col-12 col-md-6 offset-3 pb-3">

            <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
        </div>
        <div class="col-12 col-md-6 offset-3 pb-3">

            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6 offset-3 pb-3">
            <select asp-for="Role" class="form-select" asp-items="@ViewBag.rolelist">
                <option disabled selected>---select role---</option>
            </select>
            
        </div>

        <div class="col-12 col-md-6 offset-3 pb-3">

            <button type="submit " class="form-control btn-success" value="Submit">Register</button>
        </div>

    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
